@using BussinessLayer
@model Exams
@{
    ViewData["Title"] = "Taking Exam: " + Model.Title;
}

<div class="animate-fade-in" style="max-width: 900px; margin: 0 auto;">
    <!-- Exam Header with Progress -->
    <div class="card" style="margin-bottom: 2rem; border-left: 5px solid var(--accent-primary); padding: 1.5rem 2rem; display: flex; justify-content: space-between; align-items: center; position: sticky; top: 1rem; z-index: 100; backdrop-filter: blur(15px); background: rgba(30, 41, 59, 0.95);">
        <div>
            <h1 style="font-size: 1.75rem; margin-bottom: 0.25rem;">@Model.Title</h1>
            <div style="display: flex; gap: 1.5rem; color: var(--text-secondary); font-size: 0.9rem;">
                <span><i class="far fa-list-alt" style="margin-right: 5px;"></i> Questions: <strong>@Model.questions.Count</strong></span>
                <span><i class="far fa-user" style="margin-right: 5px;"></i> Examinee: <strong>Candidate</strong></span>
            </div>
        </div>
        
        <div style="text-align: center; background: rgba(239, 68, 68, 0.1); padding: 0.75rem 1.5rem; border-radius: var(--radius-lg); border: 1px solid rgba(239, 68, 68, 0.2);">
            <div style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; color: var(--danger); font-weight: 700;">Remaining Time</div>
            <div id="countdown" style="font-size: 1.75rem; font-weight: 800; color: var(--danger); font-family: 'Inter', monospace;">00:00</div>
        </div>
    </div>

    <!-- Instructions / Status -->
    <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 2rem; padding: 0 1rem; color: var(--text-muted); font-size: 0.9rem;">
        <i class="fas fa-info-circle"></i>
        <span>Answers are auto-saved locally. Press <b>Submit Assessment</b> when you are finished.</span>
    </div>

    <form action="/Home/ExamSubmit" method="post" id="examForm">
        <input type="hidden" name="ExamID" value="@Model.ID" />

        @{ int questionIndex = 1; }
        @foreach (Questions question in Model.questions)
        {
            <div class="card question-card-modern" style="margin-bottom: 2rem; padding: 2.5rem; border: 1px solid var(--border-color); transition: all 0.3s; position: relative; overflow: hidden;">
                <div style="position: absolute; top: 0; left: 0; padding: 8px 20px; background: var(--bg-primary); color: var(--text-muted); font-size: 0.8rem; font-weight: 700; border-bottom-right-radius: 12px; border-right: 1px solid var(--border-color); border-bottom: 1px solid var(--border-color);">
                    Question @questionIndex
                </div>
                
                <h3 style="font-size: 1.35rem; margin: 1rem 0 2rem 0; line-height: 1.5; color: var(--text-primary);">
                    @question.Text
                </h3>

                <div style="display: grid; gap: 12px;">
                    @for (int i = 0; i < question.Options.Count; i++)
                    {
                        var optionValue = i + 1;
                        <label class="option-container" style="display: flex; align-items: center; gap: 15px; padding: 1.25rem; background: rgba(255,255,255,0.02); border: 1px solid var(--border-color); border-radius: var(--radius-md); cursor: pointer; transition: all 0.2s;">
                            <input type="radio" name="UserAnswers[@question.ID]" value="@optionValue" required 
                                   style="width: 20px; height: 20px; accent-color: var(--accent-primary);" />
                            <span style="font-size: 1rem; color: var(--text-secondary);">@question.Options[i]</span>
                        </label>
                    }
                </div>
            </div>
            questionIndex++;
        }

        <div style="margin-top: 3rem; padding: 2rem; text-align: center; border-top: 1px solid var(--border-color);">
            <p style="color: var(--text-muted); margin-bottom: 1.5rem;">Double check all your answers before submitting.</p>
            <button type="submit" class="btn-primary" 
                    style="background: var(--accent-gradient); min-width: 250px; padding: 1.25rem 2.5rem; font-size: 1.1rem; border-radius: var(--radius-lg); border: none; font-weight: 700; cursor: pointer; box-shadow: var(--glow-primary);">
                Submit Assessment <i class="fas fa-paper-plane" style="margin-left: 10px;"></i>
            </button>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .option-container:hover {
            background: rgba(56, 189, 248, 0.05) !important;
            border-color: rgba(56, 189, 248, 0.3) !important;
        }
        .option-container:has(input:checked) {
            background: rgba(56, 189, 248, 0.1) !important;
            border-color: var(--accent-primary) !important;
        }
        .option-container:has(input:checked) span {
            color: white !important;
            font-weight: 600;
        }
    </style>
}

@section Scripts {
    <script>
        // Professional Timer Implementation
        let timeLeft = @(Model.QuizTime * 60);
        const display = document.querySelector('#countdown');
        const form = document.querySelector('#examForm');

        function updateTimer() {
            let minutes = Math.floor(timeLeft / 60);
            let seconds = timeLeft % 60;
            
            display.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 300) { // Last 5 minutes
                display.style.animation = 'pulse 1s infinite';
            }

            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                alert("Time is up! Your exam will be submitted automatically.");
                form.submit();
            }
            timeLeft--;
        }

        const timerInterval = setInterval(updateTimer, 1000);
        updateTimer();
    </script>
}