@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Portal Login - MiniExams</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/design-system.css" asp-append-version="true" />
    <style>
        body {
            background: radial-gradient(circle at center, #0f172a 0%, #020617 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            overflow: hidden;
        }

        .login-mesh {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(var(--success) 0.5px, transparent 0.5px);
            background-size: 30px 30px;
            opacity: 0.05;
            z-index: 0;
        }

        .login-card-modern {
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(24px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            padding: 3.5rem;
            border-radius: 2.5rem;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 40px 60px -15px rgba(0, 0, 0, 0.6);
            position: relative;
            z-index: 1;
            animation: slideIn 0.7s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @@keyframes slideIn {
            from { transform: scale(0.95); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 3rem;
        }

        .brand-logo i {
            font-size: 3.5rem;
            color: var(--success);
            text-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
            margin-bottom: 1.5rem;
        }

        .brand-logo h1 {
            font-size: 2.25rem;
            font-weight: 800;
            color: white;
            letter-spacing: -1px;
        }

        .input-group {
            margin-bottom: 1.25rem;
            position: relative;
        }

        .input-group i {
            position: absolute;
            left: 1.25rem;
            top: 1.15rem;
            color: var(--text-muted);
        }

        .input-modern {
            width: 100%;
            background: rgba(2, 6, 23, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.05);
            padding: 1rem 1rem 1rem 3.5rem;
            border-radius: 1.25rem;
            color: white;
            font-size: 1rem;
            transition: all 0.25s;
            outline: none;
            box-sizing: border-box;
        }

        .input-modern:focus {
            border-color: var(--success);
            background: rgba(2, 6, 23, 0.8);
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
        }

        .btn-login {
            width: 100%;
            padding: 1.1rem;
            border-radius: 1.25rem;
            border: none;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 10px 20px -5px rgba(16, 185, 129, 0.4);
            margin-top: 1.5rem;
        }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px -5px rgba(16, 185, 129, 0.5);
            filter: brightness(1.1);
        }

        .error-toast {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: var(--danger);
            padding: 1rem;
            border-radius: 1rem;
            font-size: 0.9rem;
            text-align: center;
            margin-bottom: 1.5rem;
            display: @(string.IsNullOrEmpty(ViewBag.ErrorMessage) ? "none" : "block");
        }

        .login-footer {
            text-align: center;
            margin-top: 2.5rem;
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .login-footer a {
            color: var(--success);
            text-decoration: none;
            font-weight: 700;
        }
    </style>
</head>
<body class="theme-dark">
    <div class="login-mesh"></div>
    
    <div class="login-card-modern">
        <div class="brand-logo">
            <i class="fas fa-graduation-cap"></i>
            <h1>Exam Portal</h1>
            <p style="color: var(--text-secondary); margin-top: 0.5rem;">Begin your achievement journey</p>
        </div>

        <div class="error-toast">
            <i class="fas fa-circle-exclamation"></i> @ViewBag.ErrorMessage
        </div>

        <form id="loginForm" action="/Home/ActionLogin" method="post">
            <div class="input-group">
                <i class="fas fa-user-graduate"></i>
                <input type="text" id="username" name="UserName" class="input-modern" placeholder="Username / Email" required autofocus />
            </div>
            <div class="input-group">
                <i class="fas fa-key"></i>
                <input type="password" id="password" name="PassWord" class="input-modern" placeholder="Secure Password" required />
            </div>
            
            <button type="submit" class="btn-login">
                Enter Portal <i class="fas fa-arrow-right-to-bracket" style="font-size: 0.9rem; margin-left: 8px;"></i>
            </button>
        </form>

        <div class="login-footer">
            <p>Admin or Staff? <a href="/Admin/Login">Access Dashboard</a></p>
        </div>
    </div>
</body>
</html>