<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Exam Details</title>
    <style>
        /* General Body Styling */
        body {
            font-family: 'Comic Sans MS', cursive, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Header Styling */
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #005cbf; /* Pepsi blue */
            color: white;
        }

            .admin-header h1 {
                margin: 0;
                font-size: 2em;
            }

        .logout-button {
            background-color: #ff4500; /* Bright orange */
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

            .logout-button:hover {
                background-color: #ff6347; /* Lighter orange */
            }

        /* Main Content Container */
        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 20px;
        }

        /* Exam Details Card */
        .exam-details {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            padding: 30px;
            margin-bottom: 30px;
            border: 4px solid #005cbf; /* Pepsi blue border */
        }

            .exam-details h2 {
                color: #005cbf;
                margin-top: 0;
                margin-bottom: 20px;
                font-size: 1.8em;
            }

            .exam-details p {
                color: #4682b4; /* Steel blue */
                font-size: 1.1em;
                margin: 10px 0;
            }

        /* Questions Container */
        .questions-container {
            margin-bottom: 40px;
        }

        /* Question Cards */
        .question-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            padding: 25px;
            margin-bottom: 25px;
            border: 4px solid #005cbf; /* Pepsi blue border */
            position: relative;
        }

            .question-card h3 {
                color: #005cbf;
                margin-top: 0;
                margin-bottom: 20px;
                font-size: 1.5em;
            }

        /* New Question Card */
        .new-question-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            padding: 25px;
            margin-bottom: 25px;
            border: 4px dashed #005cbf; /* Dashed border for new question */
        }

            .new-question-card h3 {
                color: #005cbf;
                margin-top: 0;
                margin-bottom: 20px;
                font-size: 1.5em;
                text-align: center;
            }

        /* Form Elements */
        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #005cbf;
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 2px solid #005cbf;
            border-radius: 8px;
            font-size: 1em;
            font-family: inherit;
            box-sizing: border-box;
        }

            .form-control:focus {
                outline: none;
                border-color: #003d82;
                box-shadow: 0 0 0 3px rgba(0,92,191,0.2);
            }

        /* Answer Options */
        .answer-option {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .answer-radio {
            margin-right: 15px;
            transform: scale(1.5);
        }

        /* Button Styling */
        .save-button {
            background-color: #005cbf; /* Pepsi blue */
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: block;
            margin: 25px auto 0;
            width: 200px;
            text-align: center;
        }

            .save-button:hover {
                background-color: #003d82; /* Darker Pepsi blue */
            }

        .add-button {
            background-color: #32cd32; /* Lime green */
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: block;
            margin: 25px auto 0;
            width: 200px;
            text-align: center;
        }

            .add-button:hover {
                background-color: #228b22; /* Darker green */
            }

        /* Delete Button */
        .delete-button {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: #ff4500; /* Bright orange */
            color: white;
            border: none;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 1em;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s ease;
        }

            .delete-button:hover {
                background-color: #cc3700; /* Darker orange */
            }

        /* Add Question Button */
        .add-question-button {
            background-color: #32cd32; /* Lime green */
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: block;
            margin: 0 auto;
            width: 200px;
            text-align: center;
        }

            .add-question-button:hover {
                background-color: #228b22; /* Darker green */
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="admin-header">
        <h1>Edit Exam Details</h1>
        <button class="logout-button" onclick="location.href='/Home/Login'">Logout</button>
    </header>

    <!-- Main Content -->
    <div class="container">
        <!-- Exam Details -->
        <div class="exam-details">
            <h2>Exam Details</h2>
            <p><strong>Title:</strong> @ViewBag.Exam.Title</p>
            <p><strong>Description:</strong> @ViewBag.Exam.Description</p>
            <p><strong>Quiz Time:</strong> @ViewBag.Exam.QuizTime minutes</p>
            <p><strong>Created Date:</strong> @ViewBag.Exam.CreatedDate.ToShortDateString()</p>
            <p><strong>Created By Admin:</strong> @ViewBag.Exam.AdminName()</p>
        </div>

        <!-- Questions Container -->
        <div class="questions-container">
            <!-- Existing Questions -->
            @foreach (Questions question in Model)
            {
                <div class="question-card">
                    <button class="delete-button" onclick="location.href='/Admin/DeleteQuestion?questionId=@question.ID&examId=@ViewBag.Exam.ID'">×</button>
                    <form action="/Admin/SaveQuestion" method="post">
                        <input type="hidden" name="QuestionID" value="@question.ID" />
                        <input type="hidden" name="examId" value="@ViewBag.Exam.ID" />

                        <div class="form-group">
                            <label for="questionText">Question Text:</label>
                            <input type="text" id="questionText" name="Text" class="form-control"
                                   value="@question.Text" required />
                        </div>

                        <h3>Answer Options:</h3>

                        @for (int i = 0; i < 4; i++)
                        {
                            <div class="answer-option">
                                <input type="radio" class="answer-radio" name="CorrectAnswer"
                                       value="@(i+1)" @(question.CorrectAnswer == i + 1 ? "checked" : "") required />
                                <input type="text" name="Options[@i]" class="form-control"
                                       value="@question.Options[i]" required />
                            </div>
                        }

                        <button type="submit" class="save-button">Save Changes</button>
                    </form>
                </div>
            }

            <!-- New Question Card -->
            <div class="new-question-card">
                <h3>Add New Question</h3>
                <form action="/Admin/AddQuestion" method="get">
                    <input type="hidden" name="examId" value="@ViewBag.Exam.ID" />

                    <div class="form-group">
                        <label for="newQuestionText">Question Text:</label>
                        <input type="text" id="newQuestionText" name="Text" class="form-control" required />
                    </div>

                    <h3>Answer Options:</h3>

                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="answer-option">
                            <input type="radio" class="answer-radio" name="CorrectAnswer"
                                   value="@(i+1)" @(i == 0 ? "checked" : "") required />
                            <input type="text" name="Options[@i]" class="form-control" required />
                        </div>
                    }

                    <button type="submit" class="add-button">Add Question</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>