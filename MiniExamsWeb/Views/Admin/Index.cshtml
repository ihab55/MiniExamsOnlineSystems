@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="animate-fade-in">
    <div class="page-header" style="margin-bottom: 3rem;">
        <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;">Admin Dashboard</h1>
        <p style="color: var(--text-secondary);">Welcome back to the command center. Monitor and manage your online testing environment.</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background: rgba(56, 189, 248, 0.1); color: var(--accent-primary);">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-info">
                <div class="value">Active</div>
                <div class="label">System Monitoring</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background: rgba(16, 185, 129, 0.1); color: var(--success);">
                <i class="fas fa-server"></i>
            </div>
            <div class="stat-info">
                <div class="value">99.9%</div>
                <div class="label">Uptime Status</div>
            </div>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 2rem;">
        <!-- Manage Users Card -->
        <div class="card" onclick="location.href='/Admin/EditUser'" 
             style="cursor: pointer; transition: all 0.3s; border-top: 5px solid var(--accent-secondary);"
             onmouseover="this.style.transform='translateY(-10px)'; this.style.borderColor='var(--accent-primary)'"
             onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='var(--accent-secondary)'">
            <div style="display: flex; gap: 20px; align-items: flex-start;">
                <div style="width: 64px; height: 64px; border-radius: 16px; background: rgba(129, 140, 248, 0.1); color: var(--accent-secondary); display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div>
                    <h2 style="font-size: 1.75rem; margin-bottom: 10px;">User Management</h2>
                    <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">Take full control over user profiles, access levels, and security credentials.</p>
                    <span style="color: var(--accent-secondary); font-weight: 600; font-size: 0.9rem; display: flex; align-items: center; gap: 8px;">
                        Explore Directory <i class="fas fa-arrow-right"></i>
                    </span>
                </div>
            </div>
        </div>

        <!-- Manage Exams Card -->
        <div class="card" onclick="location.href='/Admin/EditExams'" 
             style="cursor: pointer; transition: all 0.3s; border-top: 5px solid var(--accent-primary);"
             onmouseover="this.style.transform='translateY(-10px)'; this.style.borderColor='var(--accent-secondary)'"
             onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='var(--accent-primary)'">
            <div style="display: flex; gap: 20px; align-items: flex-start;">
                <div style="width: 64px; height: 64px; border-radius: 16px; background: rgba(56, 189, 248, 0.1); color: var(--accent-primary); display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                    <i class="fas fa-file-contract"></i>
                </div>
                <div>
                    <h2 style="font-size: 1.75rem; margin-bottom: 10px;">Exam Architect</h2>
                    <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">Design complex assessments, customize durations, and manage the question bank.</p>
                    <span style="color: var(--accent-primary); font-weight: 600; font-size: 0.9rem; display: flex; align-items: center; gap: 8px;">
                        Manage Assessments <i class="fas fa-arrow-right"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Insights -->
    <div class="card" style="margin-top: 2.5rem; background: linear-gradient(rgba(30, 41, 59, 0.8), rgba(30, 41, 59, 1)); border: 1px solid var(--border-color);">
        <h3 style="margin-bottom: 1rem;"><i class="fas fa-bolt" style="color: var(--warning);"></i> Quick Insight</h3>
        <p style="color: var(--text-secondary);">The DTO-based architecture is now live, ensuring maximum data transfer efficiency between regions and layers. All systems nominal.</p>
    </div>
</div>